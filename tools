alias composer="docker run --rm --interactive --tty --volume $PWD:/app --user $(id -u):$(id -g) composer"
alias php="docker exec -it --env XDEBUG_MODE=off --user $(id -u):$(id -g) php-apache php"
alias pest="docker exec -it --env XDEBUG_MODE=off --user $(id -u):$(id -g) php-apache ./vendor/bin/pest"